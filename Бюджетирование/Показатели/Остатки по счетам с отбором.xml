		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	Рег.Период КАК Период,
	Рег.Счет КАК Счет,
	Рег.Организация КАК Организация,
	ВЫБОР
		КОГДА Рег.Валюта ЕСТЬ NULL
			ТОГДА Рег.СуммаНачальныйОстаток
		ИНАЧЕ Рег.ВалютнаяСуммаНачальныйОстаток
	КОНЕЦ КАК ЗначениеПоказателя,
	ВЫБОР
		КОГДА Рег.Валюта ЕСТЬ NULL
			ТОГДА Рег.СуммаНачальныйОстаток
		ИНАЧЕ Рег.ВалютнаяСуммаНачальныйОстаток
	КОНЕЦ КАК Сумма,
	ВЫБОР
		КОГДА Рег.Валюта ЕСТЬ NULL
			ТОГДА Рег.СуммаНачальныйОстаток
		ИНАЧЕ Рег.ВалютнаяСуммаНачальныйОстаток
	КОНЕЦ КАК СуммаВВалюте,
	ВЫБОР
		КОГДА Рег.Валюта ЕСТЬ NULL
			ТОГДА ВалютаРегламентированногоУчета.Значение
		ИНАЧЕ Рег.Валюта
	КОНЕЦ КАК Валюта
{ВЫБРАТЬ
	Период,
	Счет.*,
	Организация.*,
	Сумма,
	СуммаВВалюте,
	ЗначениеПоказателя,
	Валюта.*}
ИЗ
	РегистрБухгалтерии.Хозрасчетный.ОстаткиИОбороты(&amp;НачалоПериода, &amp;КонецПериода, Месяц, , {(Счет).*}, &amp;ВидСубконто, {(Организация).*, (Субконто1).* КАК БанковскийСчет}) КАК Рег,
	Константа.ВалютаРегламентированногоУчета КАК ВалютаРегламентированногоУчета</query>
		<autoFillFields>false</autoFillFields>
	</dataSet>
